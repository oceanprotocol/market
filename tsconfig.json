{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "public", ".cache", "*.js"],
  "include": ["./src/**/*", "./tests/**/*", "./app.config.js"]
}
